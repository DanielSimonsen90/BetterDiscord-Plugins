{
    "compilerOptions": {
        "target": "es2020",
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "keyofStringsOnly": false,
        "baseUrl": ".",
        "paths": {
            "@discord": ["./danho-discordium/Discord"],
            "@components": ["danho-discordium/React/components/index"],
            "@BDFDB": ["./danho-bd/libraries/BDFDB/index"],
            "@ZLibrary": ["./danho-bd/libraries/ZLibrary/index"],

            "@dquery": ["./danho-discordium/dquery"],
            "@lib/*": ["./danho-bd/libraries/*"],

            "@discordium/*": ["./discordium/src/*"],
            "@BDFDB/*": ["./danho-bd/libraries/BDFDB/*"],
            "@ZLibrary/*": ["./danho-bd/libraries/ZLibrary/*"],
            "@react": ["./danho-discordium/React/index"],
            "@react/*": ["./danho-discordium/React/*"],
        }
    },
    "ts-node": {
        "files": true,
        "require": ["tsconfig-paths/register"]
    }
}
